        entity: {
          type: 'person',
          name: 'Marco Testoni',
          first_name: 'Marco',
          last_name: 'Testoni',
          email: 'marco.test@example.com',
          tax_code: 'TSTMRC90M01H501Z',
          address_street: 'Via Roma 123',
          address_postal_code: '00100',
          address_city: 'Roma',
          address_province: 'RM',
          country: 'Italia',
